<%- include("../partials/header") %>

<div class="container">
    <div class="jumbotron topContainer">
        <div class="container">
            <h1 class="display-4">üèï Welcome To YelpCamp!</h1>
            <p class="lead">Review our hand-picked campgrounds for all around the globe</p>
            <p>
                <a id="addCampBtn" class="btn btn-lg btn-primary" href="/campgrounds/new">Add a new campground</a>
            </p>
            <hr class="my-4"> 
            <div>
                <form class="form-inline " action="/campgrounds" method="GET">
                    <input class="form-control mr-sm-1 " type="text" name="search" placeholder="Campground search...">
                    <input class="btn btn-info mr-1 mt-1 mt-sm-0" name="Search" value="üîç Search" type="submit">
                    <% if (search) { %>
                        <button class="btn btn-danger mt-1 mt-sm-0">&#10060 Clear</button>
                    <% } %>
                </form>
            </div>
        </div>
    </div>

    <div class="row">
        <h2 class="col-lg-12">Our Most Popular Camps</h4>
    </div>
    <!-- Move style to stylesheet -->
    <div class="row text-center" style="display:flex; flex-wrap:wrap">
        <% campgrounds.forEach(camp => { %>
        <div class="col-md-3 col-sm-6">
            <div class="card">
                <img class="card-img-top" src=<%=camp.image %>>
                <div class="card-body">
                    <h5 class="card-title"><%= camp.name %></h5>
                    <!-- can add info here with <p> and card-text -->
                    <div class="mb-1">
                        <span class="badge badge-pill badge-primary">üëç Likes: <%= camp.likes.length %></span>
                    </div>
                    <a href="/campgrounds/<%= camp._id %>" class="btn btn-outline-primary">More Info</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<%- include("../partials/footer") %>