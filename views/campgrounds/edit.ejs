<%- include("../partials/header") %> 

<div class="container text-center">
    <div class="topContainer">
        <h1>Edit Campground - <%= camp.name %> </h1>
        <div class="yelpcamp-form">
            <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" value="<%= camp.image %> ">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" min="0.00" step="0.01"
                    name="camp[price]" value=<%= camp.price %>>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text"
                    name="camp[description]" value="<%= camp.description %> ">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">SUBMIT</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %> 