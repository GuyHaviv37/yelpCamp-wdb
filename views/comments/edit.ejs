<%- include("../partials/header") %> 

<div class="container text-center">
    <div class="topContainer">
        <h1>Edit Comment</h1>
        <div class="yelpcamp-form">
            <form action="/campgrounds/<%= camp_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">SUBMIT</button>
                </div>
            </form>
            <a href="/campgrounds/<%= camp_id %> ">Go back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %> 