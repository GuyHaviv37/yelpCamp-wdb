<%- include("../partials/header") %> 

<div class="container text-center">
    <div class="topContainer">
        <h1>Add a New Comment for <%= camp.name %> </h1>
        <div class="yelpcamp-form">
            <form action="/campgrounds/<%= camp._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Text">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">SUBMIT</button>
                </div>
            </form>
            <a href="/campgrounds/<%= camp._id %> ">Go back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %> 
